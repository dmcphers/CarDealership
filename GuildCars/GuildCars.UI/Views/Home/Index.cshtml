@model GuildCars.UI.Models.HomePageViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="container jumbotron" style="background-image: url(/Images/jumbotronbackground.jpg)">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @{int i = 0;}
            @foreach (var item in Model.specials)
            {
                i++;
                var active = i == 1 ? "active" : "";
                <div class="item @active" style="text-align: center">
                    <img src="/Images/price-tag.svg" width="100" height="100" alt="Alternate Text" />
                    <h2 class="SpecialTitle">@Html.ActionLink(@item.SpecialTitle, "Specials", "Home")</h2>
                    <h2 class="SpecialDescription">@Html.ActionLink(@item.SpecialDescription, "Specials", "Home")</h2>
                </div>

            }

        </div>
    </div>
</div>



<hr />

<div class="row">
    <div class="col-xs-12">
        <h3>Featured Vehicles</h3>
        <br />
        @foreach (var vehicle in Model.featured)
        {
            <div class="col-xs-12 col-sm-6 col-md-3 featuredVehicle">
                <p style="padding-top: 10px"><img src="@Url.Content("~/Images/" + vehicle.ImageFileName)" /></p>
                <p>@vehicle.Year @vehicle.MakeName @vehicle.ModelName</p>
                <p>@vehicle.SalePrice.ToString("c")</p>
            </div>
        }

    </div>
</div>
